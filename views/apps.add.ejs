<%- include ('header') %>

    <div class="col-12 mt-5">
        <div class="card form-card">
            <div class="card-body">
                <h4 class="header-title">Add New App</h4>
                <form action="/apps/add" method="POST" enctype="multipart/form-data">
                    <% if (locals.error) { %>
                        <div class="alert alert-danger error-msg"><%= error %></div>
                    <% } %>
                    <div class="form-group">
                        <label for="name" class="col-form-label">Name</label>
                        <input class="form-control" type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Category</label>
                        <select class="custom-select" name="category_id" required>
                            <option selected="selected" value="">Select category</option>
                            <% if (categories.length > 0) { %>
                                <% for (var i = 0; i < categories.length; i++) { %>
                                <option value="<%= categories[i]['category_id'];%>"><%=  categories[i]['category_name'];%></option>
                            <% }} %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-form-label">Icon</label>
                        <input class="form-control-file" type="file" accept="image/*" id="icon" name="app_icon" required>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-form-label">Background Image</label>
                        <input class="form-control-file" type="file" accept="image/*" id="bg" name="app_bg" required>
                    </div>
                    <div class="form-group">
                        <label for="link" class="col-form-label">Privacy Policy Link</label>
                        <input class="form-control" type="url" id="link" name="link" required>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Submit</button>
                </form>
            </div>
        </div>
    </div>

<%- include ('footer') %>